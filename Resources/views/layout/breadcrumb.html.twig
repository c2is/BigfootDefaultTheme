{% set breadcrumb = knp_breadcrumb_render(name, action|default(null)) %}

{% if breadcrumb|length > 1 %}
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            {% for item in breadcrumb %}
                <li>
                    {% if item.uri is not empty %}
                        <a href="{{ item.uri }}">{{ item.label | trans() }}</a>
                    {% else %}
                        {% if item.label == 'Home' %}
                            <i class="icon-home home-icon"></i>
                        {% endif %}

                        {{ item.label | trans() }}
                    {% endif %}

                    {% if not loop.last %}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
